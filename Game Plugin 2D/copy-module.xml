<?xml version="1.0" encoding="UTF-8"?>
<project name="CopyModule" default="default" basedir="..">
    
    <description>Copies the module to the proper location</description>
    
    <taskdef resource="org/apache/commons/vfs/tasks/tasks.properties"/>
    
    <target name="copy" depends="checkcopy" if="gp2d.exists">
        <v-copy file="Game Plugin 2D/dist/Game_Plugin_2D.jar" todir="Core/build/Plugins"/>
        <v-copy file="Game Plugin 2D/dist/Game_Plugin_2D.jar" todir="Core/dist/Plugins"/>
    </target>

    <target name="checkcopy">
        <available type="file" file="Game Plugin 2D/dist/Game_Plugin_2D.jar" property="gp2d.exists" />
    </target>
    
    <target name="default" depends="copy">
        <!-- Ensure all other modules are properly copied -->
        <ant antfile="Core/copy-modules.xml" />
    </target>
    
</project>

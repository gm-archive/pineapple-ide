<project name="PineappleModule" default="default" basedir="..">
    <description>Performs some useful tasks</description>
    
    <target name="clean">
        <echo message="P1"/>
        <subant target="clean">
            <fileset dir="Pineapple" includes="xbuild.xml"/>
        </subant>
        <echo message="P2"/>
    </target>
    
    <target name="javadoc">
        <subant target="javadoc">
            <fileset dir="Pineapple" includes="xbuild.xml"/>
        </subant>
    </target>
    
    <target name="compile">
        <subant target="compile">
            <fileset dir="Pineapple" includes="xbuild.xml"/>
        </subant>
    </target>

    <target name="jar">
        <subant target="jar">
            <fileset dir="Pineapple" includes="xbuild.xml"/>
        </subant>

        <sleep seconds="4" />
        <subant target="default" >
            <fileset dir="Pineapple" includes="copy-module.xml"/>
        </subant>
      
    </target>
</project>

<?xml version="1.0" encoding="UTF-8"?>
<project name="CopyModule" default="default" basedir="..">
    
    <description>Copies the module to the proper location</description>

    <target name="copy" depends="checkcopy" if="papple.exists">
        <copy file="Pineapple/dist/Pineapple.jar" todir="Core/build/Plugins"/>
        <copy file="Pineapple/dist/Pineapple.jar" todir="Core/dist/Plugins"/>
    </target>

    <target name="checkcopy">
        <available file="Pineapple/dist/Pineapple.jar" property="papple.exists"/>
    </target>

    <target name="default" depends="copy">
        <!-- Ensure all other modules are properly copied -->
        <ant antfile="Core/copy-modules.xml" />
    </target>
    
</project>

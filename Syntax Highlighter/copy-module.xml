<?xml version="1.0" encoding="UTF-8"?>
<project name="CopyModule" default="default" basedir="..">
       
    <description>Copies the module to the proper location</description>
    
    
    <target name="copy" depends="checkcopy" if="stxhl.exists">
       <copy file="Syntax Highlighter/dist/Syntax_Highlighter.jar" todir="Core/build/Plugins"/>
       <copy file="Syntax Highlighter/dist/Syntax_Highlighter.jar" todir="Core/dist/Plugins"/>
    </target>

    <target name="checkcopy">
        <available file="Syntax Highlighter/dist/Syntax_Highlighter.jar" property="stxhl.exists"/>
    </target>
    
    <target name="default" depends="copy">
        <!-- Ensure all other modules are properly copied -->
        <ant antfile="Core/copy-modules.xml" />
    </target>
    
</project>

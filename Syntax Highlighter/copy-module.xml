<?xml version="1.0" encoding="UTF-8"?>
<project name="CopyModule" default="default" basedir="..">
     <taskdef resource="org/apache/commons/vfs/tasks/tasks.properties"/>
       
    <description>Copies the module to the proper location</description>
    
    <taskdef resource="org/apache/commons/vfs/tasks/tasks.properties"/>
    
    <target name="copy">
       <v-copy src="Syntax Highlighter/dist/Syntax_Highlighter.jar" destdir="Core/build/Plugins"/>
       <v-copy src="Syntax Highlighter/dist/Syntax_Highlighter.jar" destdir="Core/dist/Plugins"/>
    </target>
    
    <target name="default">
        <!-- Ensure all other modules are properly copied -->
        <ant antfile="Core/copy-modules.xml" />
    </target>
    
</project>

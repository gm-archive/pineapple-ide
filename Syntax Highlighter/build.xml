<project name="PineappleModule" default="default" basedir="..">
    <description>Performs some useful tasks</description>
    
    <taskdef resource="org/apache/commons/vfs/tasks/tasks.properties"/>
    
    <target name="clean">
        <subant target="clean">
            <fileset dir="Syntax Highlighter" includes="xbuild.xml"/>
        </subant>
    </target>
    
    <target name="javadoc">
        <subant target="javadoc">
            <fileset dir="Syntax Highlighter" includes="xbuild.xml"/>
        </subant>
    </target>
    
    <target name="compile">
        <subant target="compile">
            <fileset dir="Syntax Highlighter" includes="xbuild.xml"/>
        </subant>
    </target>
    
    <target name="jar">
        <subant target="jar">
            <fileset dir="Syntax Highlighter" includes="xbuild.xml"/>
        </subant>
        <v-copy src="Syntax Highlighter/dist/Syntax_Highlighter.jar" destdir="Core/build/Plugins"/>
        <v-copy src="Syntax Highlighter/dist/Syntax_Highlighter.jar" destdir="Core/dist/Plugins"/>
    </target>
</project>
